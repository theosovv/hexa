{
  "name": "hexa-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Modular Web Synthesizer",
  "scripts": {
    "dev": "concurrently -n \"ðŸ”§BACK,âš¡FRONT\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && air",
    "dev:frontend": "cd frontend && npm run dev",
    "services": "docker compose up -d",
    "services:stop": "docker compose down",
    "db:migrate": "cd backend && make migrate-up",
    "db:migrate:down": "cd backend && make migrate-down",
    "db:migrate:create": "cd backend && make migrate-create NAME=$NAME",
    "db:sqlc": "cd backend && make sqlc",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && make lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && make fmt",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && make build"
  }
}